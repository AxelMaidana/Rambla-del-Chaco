---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';     
import Information from '../components/Information.astro';		
import RamblaMap from '../components/RamblaMap';
---

<Layout title="Welcome to My Landing Page">
	<div class="flex flex-col min-h-screen">
		<Header />
		<main class="flex-grow">
			<Hero />
			<Information id="information" />
			<dir class="px-6 xl:px-24 lg:py-20">
				<RamblaMap client:only="react" />
			</dir>
		</main>
		<Footer />
	</div>
</Layout>

<style>
	/* Custom styles for static header and footer */
	:global(header), :global(footer) {
		position: sticky;
		z-index: 10;
	}
	:global(header) {
		top: 0;
	}
	:global(footer) {
		bottom: 0;
	}
</style>